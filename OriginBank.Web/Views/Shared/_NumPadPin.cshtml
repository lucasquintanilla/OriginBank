<script>
    function addNumberPin(input, num) {
        input.value += num;
        fp(input);
    }

    function fp(input) {
        var input_val = input.value;
        if (input_val === "") { return; }
        if (input_val.length > 4) input_val = input_val.substring(0, 4);

        input_val = formatPinNumber(input_val);
        input.value = input_val;
    }
</script>