<script>
    function addNumberCurrency(input, num) {
        input.value += num;
        fc(input);
    }

    function fc(input) {
        var input_val = input.value;
        if (input_val === "") { return; }
        if (input_val.length > 10) input_val = input_val.substring(0, 10);

        input_val = formatNumber(input_val);
        input.value = input_val;
    }
</script>